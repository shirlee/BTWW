  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.fname %></td>
    <td><%= user.lname %></td>
    <td><%= user.team_id %></td>
    <td><%= user.isleader %></td>
    <td><%= user.isadmin %></td>
    <td><%= user.isnewbie %></td>
    <td><%= user.email %></td>
    <td><%= user.bikerclass %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

