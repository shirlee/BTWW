<p id="notice"><%= notice %></p>

<h1>Bikers</h1>
<br>
	<table class="table table-striped table-bordered table-condensed">

		<tr>
		<th> Name </th>
		<th> Team </th>		
		<th> Team Leader </th>		
		<th> Newbie </th>		
	 	<th> Self-Described Biker Type </th>
		<th> Commutes </th>
		<th> Current Mileage </th>
		</tr>
		<% @users.each do |user| %>
		<tr>
		<td> <%= link_to "#{user.full_name}", user_url(user.id)  %> </td>
			<% if user.team != nil %>
				<td> <%= link_to "#{user.team.company}", team_url(user.team.id)  %> </td>
				<% if user.id == user.team.leader %>
				<td> Y </td>		
				<% else %>
				<td>  </td>	
				<% end %>
			<% else  %>
				<td>  </td>
				<td>  </td>				
			<% end  %>	
		<% if user.isnewbie == true %>
		<td> Y </td>		
		<% else %>
		<td>  </td>	
		<% end %>	
		<td> <%= user.bikerclass %> </td>
		<td> <%= user.commutes.count %> </td>
		<td> <%= user.mileage %> </td>	
		<% if user.team !=nil  %>	
			<td> <%= link_to "View Commutes (#{user.commutes.count})", user_url(user.id) %> </td>		
		<% else %>
			<td>  </td>	
		<% end %>
		</tr>
<% end %>
	</table>

