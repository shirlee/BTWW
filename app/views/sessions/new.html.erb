<h1>Login</h1>
<br>
<p id="notice"><%= notice %></p>

<p>Don't have an account yet? <%= link_to "Create an Account",  new_user_url %>
<p>Prefer not to remember another password? Instead... <%= link_to image_tag("login_fb.jpeg", :border=>0), '/auth/facebook' %></p>

<br>
<%= form_tag '/sessions' do %>
<p>    <%= label_tag :email %>   <%= text_field_tag :email %> </p>
<p>    <%= label_tag :password %>   <%= password_field_tag :password %> </p>
    <%= submit_tag 'Sign in!' %>


<% end %>
