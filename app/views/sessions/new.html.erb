<h1>Login to join the fun!</h1>

<p id="notice"><%= notice %></p>
<br>

<%= link_to image_tag("login_fb.jpeg", :border=>0), '/auth/facebook' %>
<br>
<br>
<br>
<p><strong> (Or login without Facebook.) If you created a profile with a password, login below: </strong> </p>
<p>
<%= form_tag '/sessions' do %>
<p>    <%= label_tag :email %>   <%= text_field_tag :email %> </p>
<p>    <%= label_tag :password %>   <%= password_field_tag :password %> </p>
    <%= submit_tag 'Sign in!' %>
<p><%= link_to "Forgot your password?", '/forgot-password' %> </p>


<% end %>

