<p id="notice"><%= notice %></p>

<h2>Team <%=  @team.company  %></h2>

<div id="edit-link">

</div>

<p><%= link_to "Company Website", @team.website, :target => "_blank" %> |
<%= link_to "Twitter", "https://twitter.com/#!/#{@team.twitter_handle}", :target => "_blank" %></p>
<br>

<p>
  <b>Company type:</b>
  <%= @team.company_type %>; 
  <b>Size:</b>
  <%= @team.size %>; 
  <b>Size Range:</b>
  <%= @team.company_size_range %>
</p>

<p>Scoreboards for this category:
<% @award_list.each do |award| %>
	<%= link_to "#{award.goal}", award_url(award.id) %> | 
<% end  %>
</p>

<br>

<h3><%=  @team.company  %> Stats:</h3>

<p> 
  <b>Commuters:</b>
  <%= @team.commuters %>; 
  <b>Participation:</b>
  <%= @team.team_participation %>%;
  <b>Mileage:</b>
  <%= @team.mileage %>;
  <b># Commutes:</b>
  <%= @team.commutes.count %>;
  <b># Newbies:</b>
  <%= @team.newbies %>;
</p>

<br>

<p>
	<% if logged_in? != true %>
  <b>Team Members: <%= link_to '(Join This Team!)', new_user_url %></b>
	<% else %>
  <b>Team Members:</b>	
	<% end %>
</p>
	 
	
	
	<table class="table table-striped table-bordered table-condensed">

		<tr>
		<th> Name </th>
		<th> Team Leader </th>		
		<th> Newbie </th>		
	 	<th> Self-Described Biker Type </th>
		<th> Commutes </th>
		<th> Current Mileage </th>
		</tr>
		<% @team.users.each do |user| %>
		<tr>
		<td> <%= link_to "#{user.fname}" " #{user.lname}", user_url(user.id)  %> </td>
		<% if user.isleader == true %>
		<td> Y </td>		
		<% else %>
		<td>  </td>	
		<% end %>	
		<% if user.isnewbie == true %>
		<td> Y </td>		
		<% else %>
		<td>  </td>	
		<% end %>	
		<td> <%= user.bikerclass %> </td>
		<td> <%= user.commutes.count %> </td>
		<td> <%= user.mileage %> </td>		
		<td> <%= link_to "View Commutes (#{user.commutes.count})", user_commutes_url(user.id) %> </td>		
		</tr>
  <% end %>
	</table>
	
<br>


<% if logged_in? && teamleader?  %>
<%= link_to 'Edit Team', edit_team_path(@team) %> |
<% end  %>
<%= link_to 'All Teams', teams_path %>
