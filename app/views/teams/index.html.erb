<p id="notice"><%= notice %></p>

<h1>Bike To Work Week 2012</h1>
<br>
<h2>Meet The Competing Teams!</h2>
<br>

<p><strong>Search for your company here:</strong></p>

<%= form_tag teams_url, :method => 'get' do %>
<p>
<%= text_field_tag :search, params[:search]%>
<%= submit_tag "Search", :name => nil %>
</p>
<% end %>

<p><strong>Can't Find Your Company? Shame On You! <%= link_to 'Add It Here', new_team_path %></strong></p>

<br>


<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Company</th>
    <th>Company type</th>
    <th>Size</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= link_to "#{team.company}", team %></td>
    <td><%= team.company_type %></td>
    <td><%= team.size %></td>
    <td><%= team.website %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


