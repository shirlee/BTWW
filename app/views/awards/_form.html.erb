<%= form_for(@award) do |f| %>
  <% if @award.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@award.errors.count, "error") %> prohibited this award from being saved:</h2>

      <ul>
      <% @award.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :formula %>
    <%= f.text_field :formula %>
  </div>
  <div class="field" id="individual_checkbox">
    <%= f.label :isindividual, "Check if this is an Individual Award" %>
    <%= f.check_box:isindividual %>
  </div>
  <div class="field" id="company_type">
    <%= f.label :company_type %>
    <%= f.select(:company_type, ['Business', 'Non-Profit', 'Education', 'Bike-Related', 'Government', 'Transportation-Related'],
 				{:prompt => 'Select One'}) %>
  </div>
  <div class="field" id="company_size">
    <%= f.label :company_size_range, "Company Size" %>
    <%= f.select(:company_size_range, ['1-5', '6-20', '21-50', '51-100', '101-300', '301-1000', '1001+'],
 				{:prompt => 'Select One'}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
